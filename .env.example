# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database
DB_PATH=data/db.sqlite
DB_MAX_OPEN_CONNS=25       # maximum concurrent connections
DB_MAX_IDLE_CONNS=5        # maximum idle connections

# API Settings
API_BASE_URL=https://metaforge.app/api/arc-raiders
API_TIMEOUT=30             # seconds - HTTP request timeout
API_RETRY_ATTEMPTS=3       # number of retry attempts on error

# API Update Intervals (in minutes) - how often background task updates data
API_UPDATE_ITEMS=60        # items - updated every hour
API_UPDATE_EVENTS=5        # events - updated every 5 minutes (important!)
API_UPDATE_QUESTS=1440     # quests - once per 24 hours
API_UPDATE_TRADERS=60      # traders - every hour
API_UPDATE_ARCS=1440       # arcs - once per 24 hours
API_UPDATE_MAPS=1440       # maps - once per 24 hours

# Cache Settings
CACHE_MEMORY_ENABLED=true  # enable in-memory cache for fast access
CACHE_MEMORY_TTL=30        # minutes - memory cache lifetime (should be < API_UPDATE_*)
CACHE_MEMORY_MAX_SIZE=100  # MB - maximum RAM cache size
CACHE_STALE_WARNING=true   # show warning if data is older than 2 hours

# Rate Limiting
RATE_LIMIT_USER=20         # requests/minute per user
RATE_LIMIT_CHAT=30         # requests/minute per chat
RATE_LIMIT_GLOBAL=1000     # global requests/minute limit
RATE_LIMIT_WINDOW=60       # seconds - rate limit window

# Logging
LOG_LEVEL=info             # debug, info, warn, error
LOG_FILE=logs/bot.log
LOG_FORMAT=json            # json, text
LOG_MAX_SIZE=100           # MB - maximum log file size
LOG_MAX_BACKUPS=3          # number of log file backups
LOG_MAX_AGE=30             # days - old logs retention time

# Metrics & Analytics
METRICS_ENABLED=true
METRICS_DB_PATH=data/metrics.sqlite

# Localization
DEFAULT_LANGUAGE=ru        # ru, en
SUPPORTED_LANGUAGES=ru,en

# Trading System
TRADE_CONFIRMATION_TIMEOUT=24      # hours - trade confirmation timeout
TRADE_MIN_RATING=2.0               # minimum rating to create offers
TRADE_NEWBIE_LIMIT=3               # max offers per day for newbies (<10 trades)
TRADE_NEWBIE_THRESHOLD=10          # number of trades after which newbie status is removed
TRADE_COMMENT_MAX_LENGTH=500       # maximum offer comment length

# Reputation System
RATING_SUCCESS_BONUS=0.1           # bonus for successful trade
RATING_CANCEL_PENALTY=-0.2         # penalty for trade cancellation
RATING_COMPLAINT_PENALTY=-0.5      # penalty for confirmed complaint
RATING_TIME_BONUS=0.05             # bonus per month on platform
RATING_DEFAULT=3.0                 # default rating for new users

# Notifications
NOTIFICATIONS_CHECK_INTERVAL=5     # minutes - check for new events in API
NOTIFICATIONS_ENABLED=true         # global enable/disable notifications

# Admin
ADMIN_TELEGRAM_IDS=123456789       # Admin IDs separated by comma (example: 123456789,987654321)
